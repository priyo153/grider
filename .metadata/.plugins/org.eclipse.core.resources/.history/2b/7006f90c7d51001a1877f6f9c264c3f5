package grider;

public class Stack {
	
	int [] stack;
	int size;
	int top=0;
	
	Stack(int size){
		
		this.size=size;
		
		stack=new int[size];
		
	}
	
	void push(int n) {
		if(top==size) {
			throw new RuntimeException("overflow");
		}
		stack[top]=n;
		top++;
	}
	
	int pop() {
		if(top==0) {
			throw new RuntimeException("underflow");
			
		}
		top--;
		return stack[top];
		
		
	}

}
