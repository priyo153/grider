package grider;

import java.util.ArrayList;
import java.util.List;

public class DepthFirstSearch {
	
	static List<Integer> depthFirstSearch(Tree t){
		
		List<TreeNode> list1=new ArrayList<>();
		List<Integer> list2=new ArrayList<>();
		
		list1.add(t.root);
		
		while(!list1.isEmpty()) {
			System.out.println(list1);
			
			TreeNode temp=list1.get(0);
			list2.add(temp.data);
			list1.remove(temp);
			list1.addAll(0,temp.children);
			
		
			
			
		}
		return list2;
		
	}

	public static void main(String[] args) {

		Tree t=new Tree(1);
		TreeNode current=t.getRoot();
		TreeNode prev=t.getRoot();
		current.add(2);
		current.add(3);
		current.add(4);
		
		current=current.children.get(0);
		current.add(5);
		current.add(6);
		current=prev;
		current=current.children.get(1);
		current.add(7);
		current.add(8);
		
		System.out.println( depthFirstSearch(t));
		
		
		

	}

}
