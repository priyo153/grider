package grider;

import java.util.Arrays;

public class Spiral {

	public static void main(String[] args) {
		spiral(5);
	}

	public static void spiral(int n) {

		int num = 1;
		int mat[][] = new int[n][n];

		int limit = n * n;

		int x = 0;
		int y = 0;
		
		int xdir=0;
		int ydir=1;

		for (int i = 1; i < limit; i++) {

			
			mat[x][y] = i;
			
			 if(x+y==n-1 && x<y) {
				System.out.println("con a");
				xdir=1;
				ydir=0;
			}
			
			 if(x==y && x!=0) {
				 System.out.println("con b");
				xdir=0;
				ydir=-1;
			}
			if(x+y==n-1 && x>y) {
				System.out.println("con c");
				xdir=-1;
				ydir=0;
			}
			
			 if(x-y==1 && x+y<n) {
				 System.out.println("con d"+x+" "+y);
					xdir=1;
					ydir=0;
			}
			x=x+xdir;
			y=y+ydir;
			 
			
		}
		
		
	}
	
	
}

	

