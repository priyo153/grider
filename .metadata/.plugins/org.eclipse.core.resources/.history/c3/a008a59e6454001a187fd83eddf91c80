package grider;

import java.util.ArrayList;
import java.util.List;

public class LevelWidth {

	static List<Integer> levelWidth(TreeNode n) {

		List<TreeNode> list1 = new ArrayList<>();
		List<Integer> list2 = new ArrayList<>();


		list1.add(n);

		boolean flag = true;
		while (!list1.isEmpty()) {

			TreeNode temp = list1.get(0);
			if (temp.data == -1) {

				list1.remove(temp);
				list2.add(-1);
				continue;

			}

			list1.remove(temp);
			list2.add(temp.data);
			list1.addAll(temp.children);
			
			
			if (flag == true) {
				list1.add(new TreeNode(-1));
				flag = false;

			}

		}
		return list2;

	}

	public static void main(String[] args) {

		TreeNode current = new TreeNode(1);
		TreeNode prev = current;
		current.add(2);
		current.add(3);
		current.add(4);

		current = current.children.get(0);
		current.add(5);
		current.add(6);
		current = prev;
		current = current.children.get(1);
		current.add(7);
		current.add(8);

		System.out.println(levelWidth(current));

	}

}
