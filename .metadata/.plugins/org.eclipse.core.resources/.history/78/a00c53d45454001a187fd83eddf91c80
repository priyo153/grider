package grider;

import java.util.ArrayList;
import java.util.List;

public class BreadthFirstSearch {
	
	List<TreeNode> BreadthFirstSearch(Tree t){
		
		List<TreeNode> list1=new ArrayList();
		List<TreeNode> list2=new ArrayList();
		
		list1.add(t.root);
		
		while(!list1.isEmpty()) {
			
			System.out.println();
			
			
		}
		
	}

	public static void main(String[] args) {

		Tree t=new Tree(1);
		TreeNode current=t.getRoot();
		TreeNode prev=t.getRoot();
		current.add(2);
		current.add(3);
		current.add(4);
		
		current=current.children.get(0);
		current.add(5);
		current.add(6);
		current=prev;
		current=current.children.get(1);
		current.add(7);
		current.add(8);
		
		List<TreeNode> bfs=new ArrayList<>();
		bfs.add(t.getRoot());
		current=t.getRoot();
		while(current!=null) {
			
			bfs.addAll(current.children);
			
			
		}
		
		
		

	}

}
